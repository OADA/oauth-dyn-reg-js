{
  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "composite": true,
    "module": "node16",
    "moduleResolution": "node16",
    "stripInternal": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"],
  "ts-node": {
    "compilerOptions": {
      "allowImportingTsExtensions": true
    }
  }
}
